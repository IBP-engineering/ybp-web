{
  "plugins": [
    "prettier-plugin-tailwindcss",
    "@trivago/prettier-plugin-sort-imports",
    "@prettier/plugin-oxc"
  ],
  "printWidth": 80,
  "arrowParens": "avoid",
  "semi": false,
  "singleQuote": true,
  "endOfLine": "lf",
  "trailingComma": "all",
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@components/(.*)$",
    "^@types/(.*)$",
    "^@utils/(.*)$",
    "^@store/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
